<% content_for :top do %>

  <div id="video-container">
    <video autoplay loop muted data-state="playing" poster="//newyorksunshine.s3.amazonaws.com/hoop-dreams.jpg">
      <source src="//newyorksunshine.s3.amazonaws.com/hoop-dreams-201502121415.mp4">
    </video>
    <div class="description"><div class="inner"><%== @artist_statement %></div></div>
    <div class="top-area"></div>
    <div class="bottom-area"></div>
  </div>

  <div id="artbook" class="main-gallery">
    <% @works.each do |work| %>
      <%= image_tag work.attachment(:large), class: "slide gallery-cell" %>
    <% end %>
    <div class="left capture"></div>
    <div class="right capture"></div>
  </div>

  <div class="thumbnails">
    <% @works.each_with_index do |work, index| %>
      <div class="thumbnail <%= index == 2 ? 'current' : nil %>">
        <%= image_tag work.attachment(:large), class: "work" %>
      </div>
    <% end %>
  </div>

  <div id="video-container-tank">
    <video autoplay loop data-state="playing" style="max-width:100%;margin-top:40px;">
      <source src="http://trcproducts.in/NYS/Content/Water Box Series.mp4">
    </video>
  </div>


  <div id="artbook-tank" class="main-gallery">
      <img class="slide gallery-cell" src="http://trcproducts.in/NYS/Content/tank1.png" alt="1" />
      <img class="slide gallery-cell" src="http://trcproducts.in/NYS/Content/tank2.png" alt="2" />
      <img class="slide gallery-cell" src="http://trcproducts.in/NYS/Content/tank3.png" alt="3" />
     
    <div class="left capture tank"></div>
    <div class="right capture tank"></div>
  </div>

 <div class="thumbnails tank">
      <div class="thumbnail tank">
        <img class="work" src="http://trcproducts.in/NYS/Content/tank1.png" alt="2" />
      </div>
      <div class="thumbnail tank current">
        <img class="work" src="http://trcproducts.in/NYS/Content/tank2.png" alt="3" />
      </div>
      <div class="thumbnail tank">
        <img class="work" src="http://trcproducts.in/NYS/Content/tank3.png" alt="4" />
      </div>
  </div>

<% end %>
