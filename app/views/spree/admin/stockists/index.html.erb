<% content_for :page_title do %>
  <%= Spree.t(:stockists) %>
<% end %>

<% content_for :page_actions do %>
  <li><%= button_link_to Spree.t(:new_stockist), spree.new_admin_stockist_path, :icon => 'plus' %></li>
<% end %>



<% @stockists.each do |stockist_region, stockists| %>

  <h2><%= stockist_region %></h2>

  <%= render :partial => "datatable", :locals => { :stockists => stockists } %>

<% end %>